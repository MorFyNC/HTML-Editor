@page "/html-editor"

<div class="d-flex flex-row gap-2 w-100">
    <div class="editor-block">
        <div class="mb-3">
          <label for="exampleFormControlTextarea1" class="form-label">HTML Code</label>
          <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" @bind-value="HTML" @bind-value:event="oninput"></textarea>
        </div>
        <div class="d-flex gap-1 justify-content-between">
            <button type="button" class="btn btn-outline-primary" @onclick=Clear>Clear</button>
        </div>
    </div>
    <div class="html-block">
        <iframe srcdoc="@HTML"></iframe>
    </div>
</div>

@code {
    private string HTML { get; set; }

    private void Clear()
    {
        HTML = "";
    }   
}
